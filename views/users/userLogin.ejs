                    <br>
                    <label for="user_email">Email:</label>
                    <input type="email" placeholder="Tu Email" name="user_email" id="user_email"
                        value="<%= locals.nuevoUsuario ? nuevoUsuario.user_email : null %>">
                    <% if (locals.errors && errors.user_email) { %>
                        <div class="form-error">
                            <%= errors.user_email.msg %>
