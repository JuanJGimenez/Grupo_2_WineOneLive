<!DOCTYPE html>
<html>

<head>

    
    <%- include("../partials/head.ejs") %>
   
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0a256d9d04.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/userRegister.css' />
    <script src="/js/userValidation.js"></script>

</head>

<body>
    <%- include("../partials/header.ejs") %> 

    <div class="bg-img">
        <ul class="errores"></ul>
        <form class="container-reg form" id="formulario" method="POST" action="/users/register"
            enctype="multipart/form-data">
            <div class="login-sign">
                <div class="ingresa"><a href="/users/login">Ingresá</a></div>
                <div class="registra"> <a href="/users/register">Registrarse</a> </div>
            </div><br>
            <br>

            <label for="image">Imagen de perfil:</label>
            <input type="file" id="image" name="image">
            <% if (locals.errors && errors.image) { %>
                <div class="text-danger">
                    <%= errors.image.msg %>
                </div>
                <% } %>
                    <br>

                    <br>
                    <div class="input-nombre posicion">
                        <label for="user_first_name"><b>Nombre:</b></label>
                        <input type="text" class="input-text" name="user_first_name" id="user_first_name"
                            value="<%= locals.oldData ? oldData.user_first_name : null %>" placeholder="Nombre">
                        <i class="fa-solid  "></i>
                        <p class="error-nombre">El nombre sólo puede contener letras.</p>
                        <br>
                    </div>
                    <% if (locals.errors && errors.user_first_name) { %>
                        <div class="text-danger">
                            <%= errors.user_first_name.msg %>
                        </div>
                        <% } %>


                            <div class="input-apellido posicion">
                                <label for="user_last_name"><b>Apellido:</b></label>
                                <input class="input-text" type="text" name="user_last_name" id="user_last_name"
                                    value="<%= locals.oldData ? oldData.user_last_name : null %>"
                                    placeholder="Apellido" />
                                <i class="fa-solid  "></i>
                                <p class="error-apellido">El apellido sólo puede contener letras.</p>
                                <br>
                            </div>
                            <% if (locals.errors && errors.user_last_name) { %>
                                <div class="text-danger">
                                    <%= errors.user_last_name.msg %>
                                </div>
                                <% } %>
                                    <div class="input-email posicion">


                                        <label for="user_email"><b>Correo Electrónico</b></label>
                                        <br>
                                        <input type="email" placeholder="Tu Email" name="user_email" id="user_email"
                                            value="<%= locals.oldData ? oldData.user_email : null %>">
                                        <i class="fa-solid  "></i>
                                        <p class="error-mail">Ingresa un correo válido.</p>
                                        <br>

                                        <% if (locals.errors && errors.user_email) { %>
                                            <div class="text-danger">
                                                <%= errors.user_email.msg %>
                                            </div>
                                            <% } %>
                                    </div>

                                    <br>
                                    <div class="input-contraseña posicion">

                                        <label for="password"><b>Contraseña</b></label>
                                        <br>
                                        <input type="password" placeholder="Constraseña" name="user_password"
                                            id="user_password" value="">
                                        <i class="fa-solid  "></i>
                                        <p class="error-contraseña">La contraseña debe tener un mínimo de 4 y un
                                            máximo de 15 caracteres.</p>
                                        <br>
                                        <% if (locals.errors && errors.user_password) { %>
                                            <div class="text-danger">
                                                <%= errors.user_password.msg %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <br>
                                    <div class="input-contraseña2 posicion">
                                        <label for="password_confirm"><b>Confirmar contraseña</b></label>
                                        <br>
                                        <input type="password" placeholder="Confirmar contraseña"
                                            name="password_confirm" id="password_confirm" value="">
                                        <i class="fa-solid  "></i>
                                        <p class="error-contraseña2">La contraseña no coincide.</p>

                                        <% if (locals.errors && errors.password_confirm) { %>
                                            <div class="text-danger">
                                                <%= errors.password_confirm.msg %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <br>
                                    <br>
                                    <br>



                                    <div class="boton">
                                        <br>
                                        <button type="submit" class="btn">Crear usuario</button>
                                    </div>

        </form>
    </div>
    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>

</body>

</html>