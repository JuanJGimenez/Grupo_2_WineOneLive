<% for( let i=0; i < recommended.length; i++ ) { %>
    <section id="productos" class="productos">
      <article class="articulos">
        <div>
          <p class="texto-producto">Categoria - <%= recommended[i].category_id %>
          </p>
        </div>
        <div><a href="/products/product-detail/<%=recommended[i].product_id%>"><img class="img-producto" src="/images/<%= recommended[i].image %>" alt="Imagen botella producto"></a></div>
        <div>
          <p class="texto-producto">
            <%= recommended[i].product_name %>
          </p>
        </div>
        <div>
          <p class="texto-producto">
          Precio: <%= recommended[i].price %>
        </p>
        </div>
        <div class="texto-producto"><i class="fas fa-cart-arrow-down"></i></div>
      </article>
    </section>
    <% } %>