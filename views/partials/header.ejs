<header class="main-header">

    <div class="topnav-right mobile">
        <i class="fa-solid fa-bars iconos burger"></i>
        <div id="menu">
            <i class="fa-solid fa-xmark iconos cierra"></i>
            <ul>
                <li id="cierra"><a href="#">Cerrar</a></li>
                <li><a href="/">Inicio</a></li>
                <% if (!locals.userLogged) { %>
                    <li><a href="/users/register">Registrarme</a></li>
                <%}%>
                <li><a href="/products/list">Listado de productos</a></li>
                <% if (locals.userLogged && locals.userLogged.admin == 1) { %>
                    <li><a href="http://localhost:3001">DashBoard</a></li>
                    <li><a href="/products/create">Agregar productos</a></li>
                    <li><a href="/products/list">Editar productos</a></li>
                    <li><a href="/users/list">Listado de usuarios</a></li>
                    <%}%>
                <li><a href="/">Contacto</a></li>
                <li><a href="/">Sobre Nosotros</a></li>
                <% if (locals.userLogged) { %>
                    <li><a href="/users/logout">Cerrar sesión</a></li>
                    <%}%>
                <li>
                    <form action="/products/search" method="POST" class="search-form">
                        <i class="fa-solid fa-magnifying-glass iconos"></i>
                        <label for="search"></label>
                        <input class="busqueda" type="text" name="search" id="search" placeholder="Buscar...">
                        <button type="submit" id="myBtn">Buscar</button>
                    </form>
                </li>
            </ul>
        </div>

        <a href="/products/cart"><i class="fa-solid fa-bag-shopping iconos"></i></a>
        <div>
            <% if (locals.isLogged) { %>
                <a href="/users/detail/<%=locals.userLogged.user_id%>"><i
                        class="fa-solid fa-user iconos usuario"></i></a>
                <% } else { %>
                    <a href="/users/login"><i class="fa-solid fa-arrow-right-to-bracket iconos"></i></i></a>
                    <% } %>
        </div>
    </div>
    <div class="contenedor-pc">
            <a class="main-header-logo" href="/">
            <img class="logo" src="/images/logo-header-blanco.svg" alt="WineOneLIFE">
            <br>
            <br>
        </a>
        <div class="topnav">
            <a href="/" class="active">Inicio</a>
            <a href="#">Nosotros</a>
            <a href="/products/list">Catálogo</a>
            <a href="#">Contáctanos</a>
        </div>
        <% if (locals.isLogged) { %>
            <div class="topnav-right">
                <a href="/products/cart"><i class="fa-solid fa-bag-shopping"></i></a>
                <i class="fa-solid fa-magnifying-glass lupa-user"></i>
               <a href="/products/list" >Productos</a>
                <div class="user-navBar">
                    <a href="/users/detail/<%=locals.userLogged.user_id%>"><img class="img-userNavBar"
                        src="/images/<%= locals.userLogged.image %>"></a>
                        <a href="/users/detail/<%=locals.userLogged.user_id%>"><%= locals.userLogged.user_first_name %></a>
                            
                    <a href="/users/logout"><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
            <% } else { %>
                <div class="topnav-right">
                    <a href="/products/cart"><i class="fa-solid fa-bag-shopping"></i></a>
                    <div>
                        <a href="/products/list" >Productos</a>
                        <a href="/users/login"><p class="texto-navBar">Ingresar</p>
                        </a><a href="/users/register"><p class="texto-navBar">Registrarme</p>
                        </a>
                    </div>
                    <form action="/products/search" method="POST" class="search-form">
                        <i class="fa-solid fa-magnifying-glass lupa"></i>
                        <label for="search"></label>
                        <input class="busqueda" type="text" name="search" id="search" placeholder="Buscar...">
                        <button type="submit" id="myBtn"></button>
                    </form>
                </div>
                <% } %>
    </div>
</header>